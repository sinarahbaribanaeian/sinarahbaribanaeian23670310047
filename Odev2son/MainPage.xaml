<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev2son.MainPage">
    <ScrollView>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25">
            <Frame CornerRadius="12" Padding="12" HasShadow="True">

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Image
             Source="sina.jpg"
             HeightRequest="185"
             Aspect="AspectFit"
             SemanticProperties.Description="dot net bot in a submarine number ten" />

                    <Label
            x:Name="NameLabel" 
            Text="Sina Rahbaribanaeian" 
            FontAttributes="Bold" FontSize="20"
             />

                    <Label
             Text="bilgisayar mühendisliği,3.sınıf" 
             HorizontalOptions="Center"
            />
                </VerticalStackLayout>
            </Frame>
            <Label Text="Hızlı Erişim" FontAttributes="Bold" />
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto" ColumnSpacing="20">
                <Button Text="Kredi Hesapla" Clicked="kredihesaplama"/>
                <Button Grid.Column="1" Text="VKİ" Clicked="Bmihesaplama"/>
                <Button Grid.Column="2" Text="Renk Seçici" Clicked="renksecme"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
