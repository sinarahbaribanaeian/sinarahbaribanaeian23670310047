<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev2son.kredipage"
             Title="kredipage">
    <VerticalStackLayout>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <!-- Kredi Türü -->
                <Label Text="Kredi Türü" />
                <Picker x:Name="CreditPicker" Title="Kredi Türü">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>İhtiyaç Kredisi</x:String>
                            <x:String>Taşıt Kredisi</x:String>
                            <x:String>Konut Kredisi</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <!-- Kredi Tutarı -->
                <Label Text="Kredi Tutarı (TL)" />
                <Entry x:Name="AmountEntry" Placeholder="Örn: 100000" Keyboard="Numeric"/>

                <!-- Faiz Oranı -->
                <Label Text="Yıllık Faiz Oranı (%)" />
                <Entry x:Name="RateEntry" Placeholder="Örn: 1.25" Keyboard="Numeric"/>

                <!-- Vade -->
                <Label x:Name="TermLabel" Text="Vade: 12 ay"/>
                <Slider x:Name="TermSlider" Minimum="6" Maximum="360" Value="12" ValueChanged="TermSlider_ValueChanged"/>


                <Button Text="Hesapla" Clicked="CalculateButton_Clicked" />


                <Frame Padding="10" HasShadow="True" CornerRadius="8">
                    <Label x:Name="ResultLabel" Text="Sonuç burada gösterilecek." LineBreakMode="WordWrap"/>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>