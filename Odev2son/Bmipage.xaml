<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev2son.Bmipage"
             Title="Bmipage">
    <VerticalStackLayout>

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="Kilo (kg)" />
                <Slider x:Name="WeightSlider" Minimum="30" Maximum="200" ValueChanged="WeightSlider_ValueChanged"/>
                <Label x:Name="WeightLabel" Text="Kilo: 70 kg"/>

                <Label Text="Boy (cm)" />
                <Slider x:Name="HeightSlider" Minimum="120" Maximum="220" ValueChanged="HeightSlider_ValueChanged"/>
                <Label x:Name="HeightLabel" Text="Boy: 170 cm"/>

                <Frame Padding="10" HasShadow="True" CornerRadius="8">
                    <VerticalStackLayout>
                        <Label x:Name="BmiLabel" Text="VKÄ°: -"/>
                        <Label x:Name="BmiCategoryLabel" Text="Kategori: -"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>